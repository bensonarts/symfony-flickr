{% extends 'admin_base.html.twig' %}

{% block body %}
    <h2>Categories</h2>
    <a href="{{ path('admin_category_create') }}" class="btn btn-default">Create</a>
    <table class="table table-striped">
        <thead>
            <th width="5%">#</th>
            <th>Name</th>
            <th>Images</th>
            <th width="20%"></th>
        </thead>
        <tbody>
    {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td><a href="{{ path('admin_category_edit', { 'id' : category.id } ) }}">{{ category.name }}</a></td>
                <td>{{ category.images|length }}
                <td>
                    <a href="{{ path('admin_image_index', { 'id' : category.id } ) }}" class="btn btn-default">Images</a>
                    <a href="{{ path('admin_category_delete', { 'id' : category.id } ) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}
